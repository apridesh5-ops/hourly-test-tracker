{
  "name": "hourly-test-tracker",
  "version": "1.0.0",
  "description": "Production Test Analytics Desktop App",
  "main": "main.js",
  "author": "Gokul Ajith V",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parse": "^5.5.0",
    "express": "^4.18.2",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.company.hourlytesttracker",
    "productName": "Hourly Test Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "backend/**/*",
      "frontend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
